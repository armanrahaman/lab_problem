#include<iostream>

using namespace std;

int main()
{

    int rows,i,j;

    cout<<"Enter the Number of rows: "<<endl;
    cin>>rows;

    cout<<endl;

    for(i=1;i<=rows;i++){
        for(j=0;j<i;j++){
         cout.width(2);
         cout<<"*";

        }
        cout<<endl;
    }

return 0;
}
